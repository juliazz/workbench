view.collapse
	view.collapse-title(
		bindtap="toggleEventer"
	)
		view.text
			slot(name="title")
		view.icon(
			class="{{status ? 'icon-minus' : 'icon-plus'}}"
		)
	view.collapse-outer(
		class="{{status ? 'collapse-outer-show' : ''}}"
	)
		view.collapse-inner(
			class="{{status ? 'collapse-inner-show' : ''}}"
		)
			slot(name="content")
