view.popup(
	class="popup--{{type}}"
    hidden="{{ !visible }}"
    style="z-index: {{zIndex}}"
)
    view.popup-backdrop(
        catchtouchmove="ture"
    	bindtap="clickCloseBackdrop"
        hidden="{{ !visible }}"
        class="{{animatecls[1]}}"
    )
    view.popup-content(
        class="{{animatecls[0]}}"
        style="margin-{{type}}:{{distance}}rpx;background-color:{{centerBg}}"
    )
        w-icon( class="close-icon" type="close" size="large" bindtap="clickCloseBackdrop")
        slot