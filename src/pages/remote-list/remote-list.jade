w-page(
  class="w-page pages-remote-list"
)
  view(slot="header" class="header")
      //- view.title
  view(slot="content" class="content")
    view.tab-area
      view.tab(
        data-index="0"
        bindtap="tabEventer"
      )
        text.tab1(class="{{tabIndex == 0?'active':''}}") 推荐列表
      //- view.tab(
      //-   data-index="1"
      //-   bindtap="tabEventer"
      //- )
      //-   text.tab2(class="{{tabIndex == 1?'active':''}}") 指导推荐
    view.tab1-area(
      wx:if!="{{productList.length&&tabIndex == 0}}"
    )
      view.share-btn
        button(
          data-temp-id ="ciaJk6J0N50eRvcPdbBc1hW5aPcrYS4Q0K0xvHlwPXE"
          bindtap="orderMessageShare"
        ) 发送分享单
      view(
        class="list-area"
        wx:for="{{productList}}"
        wx:key="index"
        index="{{index}}"
      )
        view.cart-item
          view.item
            view.box
              image(
              mode="aspectFill"
              src="{{item.images[0].url}}"
              )
            view.box
              view.desc
                view.text {{item.productName}}
                view.share-icon(
                  data-index ="{{index}}"
                  bindtap="delRemoteList"
                )
                  image(
                    src="../../assets/image/icon/icon-deleteProduct.png"
                  )
              view.desc.subTitle {{item.subTitle}} 
                //- text 尺码：{{item.size}}
              view.currency-quantity
                w-currency(value="{{item.marketPrice}}" class="currency")
      view.del-btn(
        bindtap="clearRemoteList"
      )
        text 清空列表
