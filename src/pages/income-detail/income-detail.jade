
w-loading(id="w-loading")
w-page(
  class="w-page pages-income-detail"
)
  view(slot="header" class="header")
    view.search-area
      van-search(value="{{searchValue}}" placeholder="客户姓名或电话" use-right-icon-slot="{{false}}")
      vant-button( type="default" size="small" class="search-btn" custom-class="custom-class")
        text 导出订单
    view.total-amount
      text 总收入：
      w-currency(value="100" class="")
  view(slot="content" class="content")
    view.customer-list
      view.item-box(wx:for="123456")
        w-item-box.w-item-box()
          view.left(slot="left")
            image()
          view.center(slot="center" centerWidth="500")
            text.customer-name 客户姓名：王俊凯
            text.customer-tel 联系电话：1879638748
            text.invite-name 邀请人：婷婷
            text.belong-name 归属员工：欧派
          view.right(slot="right")
            text.state(hidden!="{{type=='online'}}") 已核销
        view.bottom-info
          view.pro-name(wx:if!="{{type!='online'}}")
            text 商品名称：XXXX
            w-currency(value="100" class="order-price")
          view(wx:if!="{{type!='online'}}") 订单编号：XXXXX
          view.time 下单时间：2020.6.1 12：00
            
  view(slot="footer" class="footer")
