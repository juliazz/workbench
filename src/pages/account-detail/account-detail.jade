
w-loading(id="w-loading")
w-page(
  class="w-page pages-account-detail"
)
  view(slot="header" class="header")
    view.search-area
      view.total-amount
        text 总收入：
        w-currency(value="100" class="oderPrize")
      vant-button(
        color="{{$themColor}}" size="normal" 
        custom-class="search-btn" bind:click="exportOrder"
        )
        text 导出订单
  view(slot="content" class="content")
    view.customer-list
      view.item-box(wx:for="{{personDetailList}}" wx:key="index")
        view.left
          view.title {{item.des}}
          view.time {{item.time}}
        view.right
          w-currency(value="{{item.changes}}" class="oderPrize")
          
          
        
  view(slot="footer" class="footer")
