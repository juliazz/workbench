
w-page(
  class="w-page pages-add-material"
  showFooter="{{true}}"
)
  view(slot="header" class="header")
  view(slot="content" class="content")
    view.title.flex-just-between()
      text 描述不能少于3个字哦
      text.example 案例
    w-textarea(
      class="w-textarea"
      value="{{recomReason}}" 
      name="blesstext" 
      data-type="blesstext"
      bindinput="bindblur"
      maxlength="200"
      placeholder="素材怎么样，请写下详细的推荐理由吧！"
    )
    view.upload
      view.upload-tips
        text 上传多张图片或一个视频
      view.upload-image(wx:if="{{videoList.length==0}}")
        van-uploader(
          multiple="{{true}}"
          max-count="{{maxImgCount}}"
          file-list="{{ imageList }}" bind:after-read="afterRead"
          bind:before-read="beforeRead" use-before-read="{{true}}" 
          disabled="{{imageList.length == 9}}" name="image" accept="image" 
          preview-image="preview-image" bind:delete="delete"
        )
      view.upload-video(wx:if="{{imageList.length==0}}")
        van-uploader(
          bind:before-read="beforeRead" use-before-read="{{true}}"
         file-list="{{ videoList }}" bind:after-read="afterRead" name="video" 
         disabled="{{videoList.length == 1}}" accept="video" preview-image="preview-image"
          bind:delete="delete"
        )
          view.upload-w.flex-align-center
            vant-icon(name="video-o" color="#888" size="24px")
  view(slot="footer" class="footer")
    vant-button( 
      type="default"  
      block
      disabled!="{{(!imageList.length) && (!videoList.length)}}"
      custom-class="issue-btn" color="{{$themColor}}" 
      data-path='income-detail?type=normal'
      bind:click="comfirmUpLoad" 
    )
      text 确定发布