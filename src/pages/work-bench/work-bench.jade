w-page(
  class="w-page pages-work-bench"
  showPage="{{showPage}}"
)
  view(slot="content" class="content")
    scroll-view( scroll-y="true" style="height: 90vh")
      view(class="header")
        view.title-info
          view.left
            view.avator()
              open-data.avator(type="userAvatarUrl" )
            view.activity-info
              view
                tex.name 某某某 
                text 南通市心心橱柜
              view.title
                text {{activityData.info.start_date}}-{{activityData.info.end_date}} {{activityData.info.name}}
          view.right(bindtap="popupShow" data-popup-type="changeActive")
            vant-button( type="info" icon='exchange' size="small" round)
              text.change 活动切换
        view.price-box
          view.price-item
            w-currency(value="{{activityData.fund.reward}}" class="oderPrize")
            text 奖励总额
          view.price-item
            w-currency(value="{{activityData.fund.recharge}}" class="oderPrize")
            text 已提取余额
          view.price-item
            w-currency(value="{{activityData.fund.punish}}" class="oderPrize")
            text 罚款金额
          view.price-item
            w-currency(value="{{activityData.fund.money}}" class="oderPrize")
            text 账户余额
      view.section.section-1
        view.action-list
          view.action-item(bindtap="popupShow" data-popup-type="choosePoster")
            image(src="../../assets/image/icon/wall-photo.png" mode="widthFix")
            text 推广海报
          view.action-item(bindtap="popupShow" data-popup-type="shopping")
            image(src="../../assets/image/icon/shopping.png" mode="widthFix")
            text 接待逛店
          view.action-item( bindtap="popupShow" data-popup-type="groupCode" )
            image(src="../../assets/image/icon/group-bar.png" mode="widthFix")
            text 群二维码
          view.action-item( bindtap="popupShow" data-popup-type="liveInvite" )
            image(src="../../assets/image/icon/live-invite.png" mode="widthFix")
            text 直播邀请
          view.action-item(bindtap="popupShow" data-popup-type="register")
            image(src="../../assets/image/icon/activity-sign-in.png" mode="widthFix")
            text 活动注册码
          view.action-item(bindtap="popupShow" data-popup-type="verification" )
            image(src="../../assets/image/icon/scan-code.png" mode="widthFix")
            text 核销扫码
          view.action-item(bindtap="$routeLink"  data-path="order-type-in")
            image(src="../../assets/image/icon/order-brand-in.png" mode="widthFix")
            text 订单录入
          view.action-item(bindtap="$routeLink" data-path="material-stock")
            image(src="../../assets/image/icon/material.png" mode="widthFix")
            text 活动素材库
          view.action-item
            image(src="../../assets/image/icon/activitymanger.png" mode="widthFix")
            text 活动管理
      view.section.section-2
        view.activity-title
          image.flag(src='../../assets/image/icon/flag.png')
          text 活动信息
        view.active-stage.bor-bottom 当前活动: {{activityData.period.perid_name}}
        view.active-stage.bor-bottom 活动阶段: {{activityData.period.perid_name}}
        view.active-time.bor-bottom  活动期限: {{activityData.period.start_datetime}}-{{activityData.period.end_datetime}}
        view.active-left-time.bor-bottom
          //- view(wx:if="{{activeEndTime==0}}")
          //-   text.end 已结束
          view()
            text 活动结束倒计时:
            text.time {{activeEndTime.days}}
            text 天
            text.time {{activeEndTime.hours}}
            text 时
            text.time {{activeEndTime.minutes}}
            text 分
          
      //- 个人区域
      user-acc-view(
        type="{{1}}"
        name="个人"
        expandState="{{false}}"
        viewData="{{userAreaData}}"
      )
      //- 部门
      user-acc-view(
        type="{{2}}"
        name="部门"
        expandState="{{false}}"
        viewData="{{userAreaData}}"
      )
      //-品牌
      user-acc-view(
        type="{{3}}"
        name="品牌"
        expandState="{{false}}"
        viewData="{{userAreaData}}"
      )
      //- 战区
      user-acc-view(
        type="{{4}}"
        name="战区"
        expandState="{{false}}}"
        viewData="{{userAreaData}}"
      )
  view(slot="footer" class="footer")

//- 选择活动弹窗
w-popup-module(
  class="w-popup pop-changeActive"
  show="{{popupType=='changeActive'}}"
  type="center"
  closeIcon=""
  closeBottom="true"
  headTitle=""
)
  view(slot="content" class="content")
    view.line1 活动切换
    view.activeListBox
      view.lineItem(
        wx:for="{{activeList}}" wx:key="index" bindtap="changeActive" data-active-id="{{item.activity_id}}")
        text {{item.name}}
        w-icon(type='right' size='right' wx:if="{{item.activity_id==activeId}}")
    view(class="bottom")
        view.close(bindtap="sureChangeActive") 确定
//- 选择海报弹窗
w-popup(
  class="w-popup popChoosePoster"
  show="{{popupType=='choosePoster'}}"
  type="center"
  name="choosePoster"
  centerBg="#RRGGBB"
  closeIcon="true"
)
  view(slot="content" class="content")
    view.content-in
      view.bigPoster
        swiper.swiper(
          current="{{postCurrent}}"
        )
          block(
            wx:for="{{poster}}"
            wx:key="index"
          )
            swiper-item
              image(
                bindtouchstart='timestart'
                bindtouchend='timeend'
                data-url="{{item}}"
                mode="aspectFill"
                src="{{item}}"
              )
      view.tips() 长按图片发送至朋友圈或保存至相册
      view.smallPoster
        scroll-view(scroll-x="true" style="width: 100%")
          view.smallPosterList
            view.album(
              wx:for="{{poster}}"
              wx:key="index")
              image(src="{{item}}" bindtap="choosePost" data-index="{{index}}" data-type="postCurrent")
